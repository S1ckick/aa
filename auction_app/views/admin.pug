doctype html    
html
    head 
        title Admin
        style 
            include w3.css
            include player.css
        script(type='text/javascript' src='public/jquery-3.6.0.min.js')
        script(type='text/javascript' src='public/jquery-ui.min.js')
        script(type='text/javascript' src='http://localhost:3030/socket.io/socket.io.js')
        script(type='text/javascript' src='public/admin.js')
    body
        div(id="header")
            div(id="title_header")
                h2 Auction
        div(id="info")
            table(id="tableArts", border = 1)
                thead 
                    tr
                        th Art 
                        th Price
                        th Holder
                        th Cost
                tbody 
            table(id="tableUsers", border = 1)
                thead 
                    tr
                        th Name 
                        th Start Cash
                each item in users 
                        tr 
                            td #{item.name}
                            td #{item.cash}
                    
        button(id="start" onclick="start_auction()") Start

        div(id="textarea" readonly)
            table(id="tableMessage")
                tbody 